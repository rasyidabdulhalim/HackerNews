<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newsTypeContainer"
    tools:context=".ui.newsType.NewsTypeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/layout_error"/>

        <include layout="@layout/layout_multi_normal_items_shimmer" />

        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="75dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/pad_medium"
            android:paddingStart="@dimen/pad_medium"
            android:paddingEnd="@dimen/pad_medium"
            android:id="@+id/rvItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>