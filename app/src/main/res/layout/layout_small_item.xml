<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_normal">

    <androidx.cardview.widget.CardView
        android:transitionName="logoTransition"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/ivLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_medium"
            tools:src="@drawable/hn_icon" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@android:color/black"
        android:theme="@style/Theme.MaterialComponents"
        tools:text="Silicon Valley witness major tech haul"
        android:textSize="10sp"
        android:textAlignment="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:padding="@dimen/pad_normal" />

    <LinearLayout
        android:padding="@dimen/pad_normal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:drawableStart="@drawable/ic_comment_small"
            android:drawablePadding="2dp"
            tools:text="21"
            android:id="@+id/tvCommentSmall"
            android:fontFamily="@font/comfortaa"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableStart="@drawable/ic_thumb_up_small"
            android:drawablePadding="2dp"
            tools:text="12"
            android:id="@+id/tvScoreSmall"
            android:fontFamily="@font/comfortaa"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>